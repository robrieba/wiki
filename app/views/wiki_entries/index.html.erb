<div class="row">
  <div class="col-sm-9">
    <table class="table table-hover">
      <col style="width:85%">
      <col style="width:5%">
      <col style="width:5%">
      <col style="width:5%">
      <thead>
      <tr>
        <th colspan="3" class="text-center"><h2>My Wikis</h2></th>
      </tr>
      </thead>

      <tbody class="js-wikis">
        <% @wiki_entries.each do |wiki_entry| %>
        <tr id="wiki-entry-<%=wiki_entry.id%>" class="default">
          <td><%= wiki_entry.title %></td>
          <td class="text-center"><%= link_to "view", wiki_entry, method: :get, class: 'btn btn-xs btn-primary' %></td>
          <td class="text-center"><%= link_to "edit", edit_wiki_entry_path(wiki_entry), method: :get, class: 'btn btn-xs btn-primary' %></td>
          <td class="text-center"><%= link_to "delete", wiki_entry, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?', remote: true } %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "New Wiki", new_wiki_entry_path, class: 'btn btn-success' %>
  </div>
</div>
